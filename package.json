{
  "name": "hapi-genisus",
  "version": "0.0.1",
  "description": "A starter kit with hapi, react, and mongodb",
  "main": "index.js",
  "engines": {
    "node": ">=8.2.1"
  },
  "scripts": {
    "start": "forever --minUptime 1000 --spinSleepTime 1000 ./dist/server.js",
    "dev": "npm run watch",
    "build": "npm run clean:dist && concurrently \"npm run build:server\"",
    "build:server": "NODE_ENV=production webpack --colors --display-error-details --config configs/webpack.server.js",
    "build:client": "NODE_ENV=production webpack --colors --display-error-details --config configs/webpack.client.js",
    "build:scss": "gulp scss",
    "clean:dist": "del 'dist/**'",
    "lint": "gulp lint",
    "lint:scss": "gulp scsslint",
    "test": "npm test",
    "watch": "npm run clean:dist && concurrently --kill-others \"npm run watch:server-start\" \"npm run watch:server\"",
    "watch:server-start": "node node_modules/just-wait -p \"dist/**\" && nodemon ./dist/server.js",
    "watch:server": "NODE_ENV=development webpack --colors --display-error-details --config configs/webpack.server-watch.js",
    "watch:scss": "gulp watch",
    "watch:client": "NODE_ENV=development webpack-dev-server --config configs/webpack.client-watch.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benhunsaker/hapi-genisus.git"
  },
  "author": "Ben Hunsaker",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/benhunsaker/hapi-genisus/issues"
  },
  "homepage": "https://github.com/benhunsaker/hapi-genisus#readme",
  "dependencies": {
    "boom": "^4.3.1",
    "good": "^7.1.0",
    "good-console": "^6.4.0",
    "good-squeeze": "^5.0.2",
    "hapi": "^16.1.1",
    "hapi-mongodb": "^6.2.1",
    "hoek": "^4.1.1",
    "inert": "^4.2.0"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "del": "^3.0.0",
    "eslint-config-hapi": "^10.0.0",
    "eslint-plugin-hapi": "^4.0.0",
    "eslint-plugin-react": "^7.1.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^4.0.0",
    "gulp-eslint": "^4.0.0",
    "gulp-jsonlint": "^1.2.0",
    "gulp-nice-package": "^1.1.0",
    "gulp-sass": "^3.1.0",
    "gulp-sass-lint": "^1.3.2",
    "gulp-task-loader": "^1.4.4",
    "gulp-util": "^3.0.8",
    "json-loader": "^0.5.4",
    "karma": "^1.7.0",
    "map-stream": "0.0.7",
    "nodemon": "^1.11.0",
    "nyc": "^11.1.0",
    "webpack": "^2.5.1",
    "webpack-dev-server": "^2.4.5",
    "webpack-node-externals": "^1.6.0"
  }
}
